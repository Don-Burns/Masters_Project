issn = {00030147},
journal = {American Naturalist},
keywords = {Allometric scaling,Body size,Carrying capacity,Population dynamics,Population growth,Temperature,rmax},
number = {3},
pages = {429--441},
title = {{Effects of body size and temperature on population growth}},
volume = {163},
year = {2004}
}
