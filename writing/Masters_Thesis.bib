keywords = {Calcium,Energy,Lactation,Life-history,Pregnancy,Protein,Reproduction,Reproductive Cost},
mendeley-tags = {Reproduction,Reproductive Cost},
number = {1490},
pages = {375--398},
title = {{The physiological costs of reproduction in small mammals}},
volume = {363},
year = {2008}
}
